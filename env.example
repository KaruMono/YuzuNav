# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/yuzunav?schema=public"

# JWT 密钥（生产环境请使用强随机字符串）
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# S3 配置（用于图片上传）
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
# 如果使用兼容 S3 的服务（如 MinIO），设置端点
# S3_ENDPOINT="http://localhost:9000"
# S3 CDN 加速域名（可选）
# S3_CDN_URL="https://cdn.example.com"

# SMTP 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="YuzuNav <your-email@gmail.com>"

# 应用 URL（用于邮件链接、SEO）
APP_URL="http://localhost:3000"

# 邮件验证开关
ENABLE_EMAIL_VERIFICATION="true"

# Node 环境
NODE_ENV="development"

# ============================================
# 网站配置（可选，优先级：数据库 > 环境变量）
# 配置后可减少数据库查询，提升首屏加载速度
# ============================================

# 网站名称
# SITE_NAME="YuzuNav"

# 网站副标题
# SITE_SUBTITLE=""

# 网站图标类型：text（文字）、fa（Font Awesome）、image（图片）
# SITE_ICON_TYPE="text"

# 网站图标（文字或 Font Awesome 类名，如 "fas fa-compass"）
# SITE_ICON=""

# 网站图标背景色
# SITE_ICON_COLOR="#1e293b"

# 网站 Logo URL（当 SITE_ICON_TYPE=image 时使用）
# SITE_LOGO_URL=""

# ============================================
# CDN 配置（可选）
# ============================================

# CDN 提供商：local、jsdelivr、unpkg、cdnjs、bootcdn、staticfile、custom
# CDN_PROVIDER="local"

# 自定义 CDN URL（当 CDN_PROVIDER=custom 时使用）
# CUSTOM_CDN_URL=""

# ============================================
# SEO 配置（可选）
# ============================================

# SEO 标题
# SEO_TITLE=""

# SEO 描述
# SEO_DESCRIPTION=""

# SEO 关键词
# SEO_KEYWORDS=""

# Favicon URL
# FAVICON_URL=""

# Apple Touch Icon URL
# APPLE_TOUCH_ICON_URL=""

# ============================================
# 存储配置（可选）
# ============================================

# 存储类型：local（本地）、s3（S3 对象存储）
# STORAGE_TYPE="local"
